<table id="leaderboard-table">
    <thead>
        <tr>
            <th scope="col">Rank</th>
            <th scope="col">Player</th>
            <th scope="col">Number</th>
            <th scope="col">Games</th>
        </tr>
    </thead>
    <tbody>
        {{#each this}}
            {{#ifCond fifty '>' 0}}
                <tr>
                    <td class="number-right">
                        {{#ifCond (tieHandler fifty) '==' 1}}
                            <img class="halo-rank" src="{{concat 'base_url' '/templates/bundle/assets/ranks/general_g4.png'}}" />
                        {{/ifCond}}

                        {{tieHandler fifty}}
                    </td>
                    <td><a href="/profile/{{player__gamertag}}"> <img class="emblem" src="{{player__emblem}}" /> <span class="gamertag">{{player__gamertag}}</span></a></td>
                    <td class="number">{{fifty}}</td>
                    <td class="number-right">{{numCommaFormat player__matches}}</td>
                </tr>
            {{/ifCond}}
        {{/each}}
    </tbody>
</table>